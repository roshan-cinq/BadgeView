<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="badgeViewStyle">@style/BadgeView_Default</item>
    </style>

    <style name="BadgeView_Default">
        <item name="bgColor">@color/badgeBgDefault</item>
        <item name="buttonIcon">@drawable/android</item>
        <item name="badgePosition">TopRight</item>
        <item name="badgeColor">@color/badgeDefault</item>
    </style>

</resources>
